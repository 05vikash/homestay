<% layout("/layouts/boilerplate") -%>

    <div class="row">
        <div class="col-8 offset-3">
            <%=listing.title %>
        </div>
            <div class="card col-6 offset-3 show-card">
                <img src="<%= listing.image %>" alt="listing_image" class="card-img-top show-img">
                <div class="card-body">
                    <p class="card-text">
                        <br>
                        <%=listing.description %> <br>
                        &#8377;<%=listing.price.toLocaleString("en-IN") %> <br>
                        <%=listing.location %> <br>
                        <%=listing.country %>


                    </p>
                </div>
            </div>

            <div class="btns">

                <a href="/listing/<%=listing._id %>/edit" class="btn btn-dark offset-3 edit-btn">edit</a>

            <form method="post" action="/listing/<%=listing._id %>?_method=delete"  >
                <button class="btn btn-dark offset-4">delete</button>
            </form>

            </div>
            <div>
                <form action="/listings/<%=listing.id %>/reviews" method="post" novalidate class="needs-validation">
                    <div>
                     <label for="rating" class="form-label">rate us !</label>
                     <input name="review[rating]" type="range" min="1" max="5" class="form-control">
                    </div>
     
                     <div>
                     <label for="comment" class="form-label">feedback</label>
                     <textarea name="review[comment]" cols="60" rows="10" class="form-control" minlength="150 " required></textarea>
                     </div>
                     <div class="invalid-feedback">
                         add some comments 
                     </div>
     
                     <button type="submit">submit</button>
                 </form>

                 <h4>all reviews</h4>
                <div class="row">

                 <%  for(let review of listing.review) { %>
                   <div class="card col-6 mb-3">
                    <div class="card-body">
                        <h5 class="card-title">demo_title</h5>
                        <p class="card-text">review: <%= review.comment %></p>
                        <p class="card-text">rating: <%= review.rating %></p>

                        <form method="post" action="/listings/<%= listing._id %>/reviews/<%= review._id %>?_method=delete">
                            <button>delete</button>
                        </form>

                    </div>
                   </div>
                        <% } %>
                </div>
            </div>
         </div>