<% layout("/layouts/boilerplate") -%>

    <body>
        
        <form method="post" action="/listing" novalidate class="needs-validation">

            <div class="row">
                <div class="col-8 offset-2">
                    <h3 >creat new listing</h3>
                    <div class="mb-3">
                        <label for="title" class="form-label">Title</label>
                      <input name="listing[title]" placeholder="enter title" type="text" class="form-control"
                      required
                      />
                      <div class="valid-feedback">
                        looks good
                      </div>
                      <div class="invalid-feedback">
                        title is required
                      </div>
                    </div>
                      
                      
                      
                      <div class="mb-3">
                        <label for="description" class="form-label">Description</label>
                      <textarea
                        name="listing[description]"
                        placeholder="enter description"
                        class="form-control"
                        required
                      ></textarea>
                      <div class="invalid-feedback">
                        description is missing
                      </div>
                      </div>

                      <div class="mb-3">
                        <label for="image" class="form-label">Image</label>
                        <input
                        name="listing[image]"
                        placeholder="enter image URL/Link"
                        type="text"
                        class="form-control"
                      />
                      </div>
                     
                    <div class="row">
                        <div class="mb-3 col-4">
                            <label for="price" class="form-label">Price</label>
                            <input name="listing[price]" placeholder="enter price"  class="form-control"
                            required />
                          </div>
                          
                          <div class="mb-3 col-8">
                            <label for="country" class="form-label">Country</label>
                            <input name="listing[country]" placeholder="enter country" type="text" class="form-control"/>
                          </div>
                    </div>
                     
                      <div class="mb-3">
                        <label for="location" class="form-label">Location</label>
                        <input
                        name="listing[location]"
                        placeholder="enter location"
                        type="text"
                        class="form-control"
                      />
                      </div>
                      
                      
                      <button class="btn add-btn mb-3">Add</button>
                    
                </div>
            </div>

        </form>
    </body>

    </html>